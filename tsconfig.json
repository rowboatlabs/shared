{
    "compilerOptions": {
      "outDir": "./dist",
      "declaration": true,
      "target": "ES6",
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }