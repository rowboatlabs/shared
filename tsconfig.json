{
    "compilerOptions": {
      "outDir": "./dist",
      "declaration": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "target": "ES6",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": true,
      "jsx": "react-jsx"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }